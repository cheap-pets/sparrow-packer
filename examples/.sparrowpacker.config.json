{
  "sourceRoot": "src", // 源文件根目录
  "outputRoot": "dist", // 输出根目录
  "bundle": {
    "format": "iife", // 生成立即执行脚本
    "version": "auto", // 自动增长文件版本号
    "autoInsert": true, // 自动插入页面
    //"relativePath": "", // 页面中引用 bundle 文件的相对地址
    "pagePath": "", // 页面输出路径
    "scriptPath": "js", // js 文件输出路径
    "cssPath": "css", // css 文件输出路径
    "external": [
      "vue"
    ],
    "uglify": true,
    "sourcemap": true,
    "globals": {
      "vue": "Vue"
    }
  },
  /*
  "vue": {
    "clientRender": false // 依赖客户端渲染的 vue 模块
  },
  */
  "modules": [
    {
      "name": "lib",
      "source": {
        "lib": "lib"
      },
      "output": {
        "lib": "js/lib"
      }
    },
    {
      "name": "a", // 模块名称
      "source": {
        "dir": "module-a", // 模块目录
        "page": "a.html", // 页面文件
        "script": "script/index.js", // 入口文件（脚本）
        "assets": "assets"
      },
      "watch": [
        "lib" // 监视 lib 目录变化
      ]
    },
    {
      "name": "b", // 模块名称
      "source": {
        "dir": "module-b", // 模块目录
        "page": "b.html", // 页面文件
        "script": "script/index.js", // 入口文件（脚本）
        "css": "css/index.css", // 样式文件
        "assets": "assets"
      },
      "watch": [
        "lib" // 监视 lib 目录变化
      ]
    }
  ]
}